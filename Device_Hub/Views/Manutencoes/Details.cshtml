@model Device_Hub.Models.Manutencao

@{
    ViewBag.Title = "Details";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row g-3 card shadow mb-4 border-bottom-info">
        <div class="card-header py-3 d-flex justify-content-between">
            <h1 class="h3 mb-2 text-gray-800">Detalhes da Manutenção</h1>
        </div>
        <div class="row g-3 justify-content-between">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(model => model.Data)</dt>
                    <dd>@Html.DisplayFor(model => model.Data)</dd>
                </dl>
            </div>

            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(model => model.Descricao)</dt>
                    <dd>@Html.DisplayFor(model => model.Descricao)</dd>
                </dl>
            </div>

            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(model => model.Custo)</dt>
                    <dd>@Html.DisplayFor(model => model.Custo)</dd>
                </dl>
            </div>

            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(model => model.AtivoId)</dt>
                    <dd>@Html.DisplayFor(model => model.AtivoId)</dd>
                </dl>
            </div>
        </div>
        <div class="form-group text-right mt-5">
            <div class="row">
                <div class="col-md-12">
                    <a class="btn-icon-split">
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary", style = "padding: 6px 20px; font-size: 1rem;" })
                    </a>
                    <a class="btn-icon-split btn-lg mr-5 ml-1">
                        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info", style = "padding: 8px 16px; font-size: 1.05rem;" })
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
