@model Device_Hub.Models.Garantia

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row g-3 card shadow mb-4 border-bottom-success">
        <div class="card-header py-3 d-flex justify-content-between">
            <h1 class="h3 mb-2 text-gray-800">Adicionar Garantia</h1>
        </div>
        <div class="row g-3 justify-content-center">
            <div class="col-md-4">
                @Html.LabelFor(model => model.DataInicio, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.DataInicio, new { htmlAttributes = new { @class = "form-control", id = "dataInicioGarantia", type = "date" } })
                @Html.ValidationMessageFor(model => model.DataInicio, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                @Html.LabelFor(model => model.DataFim, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.DataFim, new { htmlAttributes = new { @class = "form-control", id = "dataFimGarantia", required = "required", type = "date", onblur = "validarDataFimGarantia()" } })
                @Html.ValidationMessageFor(model => model.DataFim, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                @Html.LabelFor(model => model.FornecedorId, "Fornecedor", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("FornecedorId", null, htmlAttributes: new { @class = "form-control", id = "fornecedorGarantia", required = "required" })
                @Html.ValidationMessageFor(model => model.FornecedorId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group text-right mt-5">
            <div class="row">
                <div class="col-md-12">
                    <a class="btn-icon-split">
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary", style = "padding: 6px 20px; font-size: 1rem;" })
                    </a>
                    <a class="btn-icon-split btn-lg mr-5 ml-3">
                        <input class="btn btn-success" type="submit" value="Adicionar" style="padding: 8px 16px; font-size: 1.05rem;" />
                    </a>
                </div>
            </div>
        </div>
    </div>
}
